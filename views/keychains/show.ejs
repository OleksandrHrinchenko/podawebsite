<%- include ("../partials/header") %>

<div class="show-product-page">
    <h2 id="product-name" class="show-product-page-h2"><%= keychain.name %></h2>
    <div class="show-product-page-image-container">
        <img class="show-product-page-image" id="show-product-page-image"
            src="/Images/gallery/keychains/<%= keychain.image %>" alt="">
    </div>
    <p id="product-description-widescreen"><%= keychain.description %></p>

    <ul>
        <li class="instock"><i class="far fa-check-circle"></i>&nbsp;В наявності</li>
        <li id="product-price" class="show-product-page-price"><%= keychain.price %> &#8372;</li>
        <li class="show-product-page-wishlist"><i class="fas fa-heart fa-lg"></i>&nbsp;До обраного</li>
        <li><button class="buy-button" id="add-to-cart-wide" onclick="add_to_cart()" href=""><i
                    class="fas fa-shopping-cart"></i>&nbsp;Купити</button></li>
    </ul>
    <p id="product-description"><%= keychain.description %></p>

    <% if(currentUser){ %>
    <div class="edit_or_delete">
        <button class="edit-post"><a href="<%= keychain._id%>/edit">EDIT</a></button>
        <form action="/keychains/<%= keychain._id %>?_method=DELETE" method="POST">
            <button class="delete-post">DELETE</button>
        </form>
    </div>
    <% } %>

    <button class="buy-button" id="add-to-cart" onclick="add_to_cart()" href=""><i
            class="fas fa-shopping-cart"></i>&nbsp;Купити</button>
    <div id="show-cart" class="show-cart-class">
        <div class="show-cart-main">
            <p class="added-to-cart">Обраний товар</p>
            <div class="added-product">
                <div>
                    <img class="added-product-image" src="/Images/gallery/keychains/<%= keychain.image %>" alt="">
                    <h4><%= keychain.name %></h4>
                    <p><%= keychain.description %></p>
                    <p id="keychain_price"><%= keychain.price %> грн</p>

                </div>
                <div>
                    <button class="buy-button-edit" onclick="add_to_cart()">Продовжити покупки</button>
                </div>
                <a href="/cart">
                    <button class="buy-button-confirmation">Оформити замовлення</button>
                </a>
            </div>
        </div>
    </div>
    <div id="show-cart-2" class="show-cart-class">
        <div class="show-cart-main">
            <p class="added-to-cart">Обраний товар</p>
            <div class="added-product">
                <div>
                    <img class="added-product-image" src="/Images/gallery/keychains/<%= keychain.image %>" alt="">
                    <h4><%= keychain.name %></h4>
                    <p><%= keychain.description %></p>
                    <p id="keychain_price"><%= keychain.price %> грн</p>

                </div>
                <div>
                    <button class="buy-button-edit" onclick="close_cart()">Продовжити покупки</button>
                </div>
                <a href="/cart">
                    <button class="buy-button-confirmation">Оформити замовлення</button>
                </a>
            </div>
        </div>
    </div>
</div>

<%- include ("../partials/footer") %>